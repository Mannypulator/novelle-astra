<section class="container recommend">
    <div class="recommend__header">
        <h2 class="recommend__header--title">Recommended for you</h2>

        <p class="recommend__header--text">Listings we think you will love</p>
    </div>
    <div class="recommend-cards">
        <div class="recommend-card">
            <div class="recommend-card__description">
                <p class="recommend-card__text">5 Bedroom Detached Mansion</p>
                <p class="recommend-card__amount">$950,000,000</p>
            </div>
            <div class="recommend-card__description--full">
                <p class="recommend-card__text--full">
                    5 Bedroom Detached Duplex
                </p>
                <p class="recommend-card__location">Ikoyi,Lagos</p>
                <ul class="luxuries">
                    <li>5 Bed</li>
                    <li>6 Cars</li>
                    <li>6 Bathrooms</li>
                </ul>
                <p class="recommend-card__amount--full">$950,000,000</p>
                <a href="#">See more</a>
            </div>
        </div>
        <div class="recommend-card">
            <div class="recommend-card__description">
                <p class="recommend-card__text">5 Bedroom Detached Duplex</p>
                <p class="recommend-card__amount">$110,000,000</p>
            </div>
            <div class="recommend-card__description--full">
                <p class="recommend-card__text--full">
                    5 Bedroom Detached Duplex
                </p>
                <p class="recommend-card__location">Ikoyi,Lagos</p>
                <ul class="luxuries">
                    <li>5 Bed</li>
                    <li>6 Cars</li>
                    <li>6 Bathrooms</li>
                </ul>
                <p class="recommend-card__amount--full">$110,000,000</p>
                <a href="#">See more</a>
            </div>
        </div>
        <div class="recommend-card">
            <div class="recommend-card__description">
                <p class="recommend-card__text">3 & 4 Bedroom Condominium</p>
                <p class="recommend-card__amount">$650,000,000</p>
            </div>
            <div class="recommend-card__description--full">
                <p class="recommend-card__text--full">
                    5 Bedroom Detached Duplex
                </p>
                <p class="recommend-card__location">Ikoyi,Lagos</p>
                <ul class="luxuries">
                    <li>5 Bed</li>
                    <li>6 Cars</li>
                    <li>6 Bathrooms</li>
                </ul>
                <p class="recommend-card__amount--full">$110,000,000</p>
                <a href="#">See more</a>
