        </div>
    </div>
</section>

<style>
    .recommend {
        margin-bottom: 4rem;
    }
    .recommend__header--title {
        font-size: 3rem;
        font-weight: 800;
    }

    .recommend__header--text {
        font-size: 1.5rem;
    }

    .recommend-cards {
        display: flex;
    }

    .recommend-card {
        display: flex;
        flex-direction: column;
        justify-content: center;
        align-items: center;
        width: 400px;
        height: 450px;
        margin-left: 20px;
        vertical-align: middle;
        border-radius: 10px;
        box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
        color: #fff;
    }

    .recommend-card:nth-child(1) {
        /* give background image */
        background-image: url("../images/architecture-5339245_1920.jpg");
        background-size: cover;
        background-position: center;
        background-repeat: no-repeat;
        position: relative;
    }

    .recommend-card:nth-child(2) {
        /* give background image */
        background-image: url("../images/residence-2219972_1920.jpg");
        background-size: cover;
        background-position: center;
        background-repeat: no-repeat;
        position: relative;
    }
    .recommend-card:nth-child(3) {
        /* give background image */
        background-image: url("../images/house-1836070_1920.jpg");
        background-size: cover;
        background-position: center;
        background-repeat: no-repeat;
        position: relative;
    }

    .recommend-card__description {
        margin-top: 300px;
        z-index: 1;
        display: block;
        transition: display 0.5s ease;
    }

    .recommend-card__text,
    .recommend-card__amount {
        font-size: 1.5rem;
        color: #fff;
    }

    .recommend-card__text {
        width: 100%;
        font-size: 1.3rem;
        margin-bottom: -20px;
    }
    .recommend-card__amount {
        font-size: 2.8rem;
        width: 100%;
    }

    .recommend-card__description--full {
        z-index: 1;
        margin-top: -10px;
        text-align: center;
        width: 80%;
        display: none;
        transition: display 0.5s ease;
    }

    .recommend-card__text--full {
        font-size: 2rem;
        font-weight: 600;
    }

    .recommend-card__location,
    .luxuries li {
        font-size: 1.3rem;
        margin-bottom: -4px;
    }

    .recommend-card__amount--full {
        font-size: 1.8rem;
        margin-top: -0.6rem;
    }
    li {
        margin-bottom: -0.6rem !important;
    }
    .recommend-card__description--full a {
        color: #fff;
        border: 2px solid #fff;
        padding: 10px 20px;
        border-radius: 4px;
    }

    .recommend-card::before {
        content: "";
        position: absolute;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
        background-color: rgba(0, 0, 0, 0.7) !important;
        border-radius: 10px;
    }

    /* on hover on each card , change the background image and make the recommend-card__description hidden while recommend-card__description--full becomes visible */

    .recommend-card:nth-child(1):hover {
        background-image: url("../images/architecture-5339245_1920.jpg");
        background-size: cover;
        background-position: center;
        background-repeat: no-repeat;
    }

    .recommend-card:nth-child(2):hover {
        background-image: url("../images/residence-2219972_1920.jpg");
        background-size: cover;
        background-position: center;
        background-repeat: no-repeat;
    }
    .recommend-card:nth-child(3):hover {
        background-image: url("../images/house-1836070_1920.jpg");
        background-size: cover;
        background-position: center;
        background-repeat: no-repeat;
    }

     .recommend-card:nth-child(3):hover {
        background-image: url("../images/house-1836070_1920.jpg");
        background-size: cover;
        background-position: center;
        background-repeat: no-repeat;
    }

    .recommend-card:nth-child(1):hover .recommend-card__description {
        display: none;
        transition: display 0.5s ease;
    }
  

    .recommend-card:nth-child(2):hover .recommend-card__description {
        display: none;
        transition: display 0.5s ease;
    }

    .recommend-card:nth-child(3):hover .recommend-card__description {
        display: none;
        transition: display 0.5s ease;
        background-image: url("../images/house-1867187_1280.jpg");
    }

    .recommend-card:nth-child(1):hover .recommend-card__description--full {
        display: block;
        transition: display 0.5s ease;
    }
    .recommend-card:nth-child(2):hover .recommend-card__description--full {
        display: block;
        transition: display 0.5s ease;
    }
    .recommend-card:nth-child(3):hover .recommend-card__description--full {
        display: block;
        transition: display 0.5s ease;
        
    }

