  /* Media Queries */
  @media (max-width: 768px) {
    .showcase__desciption-container {
      width: 90%;
    }

    .card {
      width: 90%;
      height: auto;
      margin-left: 0;
      margin-bottom: 20px;
      padding: 40px 20px;
    }

    .card:nth-child(1),
    .card:nth-child(2) {
      background-position: top;
    }
  }

  @media (max-width: 576px) {
    .showcase__description {
      font-size: 2rem;
    }

    .card {
      padding: 40px 10px;
    }
  }
</style>
